<!-- Afflictions -->
<Afflictions>
  <!-- Flu: A trigger for fever on itself. Provides minor penalties at end. Caused by being in water(Need to check it, still does not work) -->
  <Affliction name="" identifier="flu" description="" type="disease" limbspecific="false" indicatorlimb="Head" activationthreshold="0" showiconthreshold="100" showinhealthscannerthreshold="0" minstrength="0" maxstrength="300" healcostmultiplier="2" causeofdeathdescription="">
    <!-- General developement of flu -->
    <Effect minstrength="0" maxstrength="100" strengthchange="+1">
      <StatusEffect target="Character" multiplyafflictionsbymaxvitality="true"> <!-- Questionable multiplyafflictionsbymaxvitatility. Don't get what it does nor when I added it, need to check or remove.(JaxMesa; 17.12.2025) -->
        <Affliction identifier="fever" strength="0.25" />
      </StatusEffect>
    </Effect>
    <!-- If player has half of flu, it accelerates -> Need more pills or vanilla antibiotics -->
    <Effect minstrength="100" maxstrength="200" strengthchange="+2">
      <StatusEffect target="Character" multiplyafflictionsbymaxvitality="true">
        <Affliction identifier="fever" strength="0.5" />
        <!-- Sometimes stuns player becaues fever getting dangerous (45 to 90 secs, stuns for 3 secs) -->
        <PeriodicEffect mininterval="45" maxinterval="90">
          <StatusEffect target="Character">
            <Affliction identifier="stun" strength="3"/>
          </StatusEffect>
        </PeriodicEffect>
      </StatusEffect>
    </Effect>
    <!-- Sometimes player coughs for male -->
    <PeriodicEffect mininterval="120" maxinterval="300">
      <StatusEffect target="Character" comparison="and">
        <Conditional ishuman="true" />
        <Conditional ismale="true" />
        <Sound file="%ModDir%/sounds/Voice/male_cough1.ogg" selectionmode="Random" />
        <Sound file="%ModDir%/sounds/Voice/male_cough2.ogg" />
        <Sound file="%ModDir%/sounds/Voice/male_cough3.ogg" />
        <Sound file="%ModDir%/sounds/Voice/male_cough4.ogg" />
      </StatusEffect>
    </PeriodicEffect>
    <!-- For female -->
    <PeriodicEffect mininterval="120" maxinterval="300">
      <StatusEffect target="Character" comparison="and">
        <Conditional ishuman="true" />
        <Conditional isfemale="true" />
        <Sound file="%ModDir%/sounds/Voice/female_cough1.ogg" selectionmode="Random" />
        <Sound file="%ModDir%/sounds/Voice/female_cough2.ogg" />
        <Sound file="%ModDir%/sounds/Voice/female_cough3.ogg" />
        <Sound file="%ModDir%/sounds/Voice/female_cough4.ogg" />
        <Sound file="%ModDir%/sounds/Voice/female_cough5.ogg" />
        <Sound file="%ModDir%/sounds/Voice/female_cough6.ogg" />
      </StatusEffect>
    </PeriodicEffect>
    <icon texture="%ModDir%/icons/charHeadDrop.png" color="215,165,0,255" origin="0,0" />
  </Affliction>
  <!-- Fever: Increases while affected by flu. Does not go away on itself -> Need vitamins. Is not fatal, just big debuffs at end. -->
  <Affliction name="" identifier="fever" description="" type="symptom" limbspecific="false" indicatorlimb="Torso" activationthreshold="1.0" showiconthreshold="60" showinhealthscannerthreshold="0" minstrength="0" maxstrength="100">
    <!-- First stage: Minor debuffs -->
    <Effect minstrength="0" maxstrength="30" minscreenblur="0.1" maxscreenblur="0.2">
      <StatusEffect target="Character">
        <PeriodicEffect mininterval="30" maxinterval="60">
          <StatusEffect target="Character">
            <Affliction identifier="organdamage" strength="1"/>
            <Affliction identifier="nausea" strength="1"/>
          </StatusEffect>
        </PeriodicEffect>
      </StatusEffect>
    </Effect>
    <!-- Second stage: Moderate debuffs -->
    <Effect minstrength="30" maxstrength="60" minscreenblur="0.2" maxscreenblur="0.4">
      <StatusEffect target="Character">
        <Affliction identifier="nausea" strength="10" probability="0.01" />
        <PeriodicEffect mininterval="30" maxinterval="60">
          <StatusEffect target="Character">
            <Affliction identifier="organdamage" strength="1.5"/>
            <Affliction identifier="nausea" strength="1.5"/>
          </StatusEffect>
        </PeriodicEffect>
      </StatusEffect>
    </Effect>
    <!-- Third stage: Big debuffs + Pain gain -->
    <Effect minstrength="60" maxstrength="100" minscreenblur="0.4" maxscreenblur="0.6">
      <StatusEffect target="Character">
        <PeriodicEffect mininterval="30" maxinterval="60">
          <StatusEffect target="Character" >
            <Affliction identifier="organdamage" strength="2"/>
            <Affliction identifier="nausea" strength="2"/>
          </StatusEffect>
        </PeriodicEffect>
        <Affliction identifier="pain" strength="2" />
      </StatusEffect>
    </Effect>
    <icon texture="%ModDir%/icons/charFever.png" color="255,90,0,255" origin="0,0" />
  </Affliction>
  <!-- Cancer: A long-term disease with debuffs and eventual death. Lasts for somewhat 20 minutes and can be accelerated by radiation sickness. -->
  <Affliction name="" identifier="cancer" description="" type="cancer" limbspecific="false" indicatorlimb="Torso" activationthreshold="0" showiconthreshold="300" showinhealthscannerthreshold="0" causeofdeathdescription="" minstrength="0" maxstrength="600" iconcolors="25,25,25,255;55,55,55,255;75,75,75,255" healcostmultiplier="10">
    <!-- First stage: Minor debuffs, lasts for ~5 min -->
    <!-- FATAL! Number wrong again, apparently. For fuck sake. -->
    <!-- Maybe try replace debuffs with skill penalties later? Sounds good -->
    <Effect minstrength="0" maxstrength="150" minvitalitydecrease="0" maxvitalitydecrease="10" strengthchange="+0.5">
      <StatusEffect target="Character" SpeedMultiplier="1" setvalue="true" />
      <!-- Accelerates cancer developement if radiation sickness is more or greater than 10 -->
      <StatusEffect target="Character">
        <Conditional radiationsickness="gte 10" />
        <Affliction identifier="cancer" strengthchange="0.5" />
      </StatusEffect>
    </Effect>
    <!-- Second stage: Moderate debuffs, lasts for ~5 min-->
    <Effect minstrength="150" maxstrength="300" minscreenblur="0" maxscreenblur="0.1" minvitalitydecrease="10" maxvitalitydecrease="25" strengthchange="+0.5">
      <StatusEffect target="Character" SpeedMultiplier="0.9" setvalue="true" />
      <!-- Accelerates cancer developement if radiation sickness is more or greater than 10 -->
      <StatusEffect target="Character">
        <Conditional radiationsickness="gte 10" />
        <Affliction identifier="cancer" strengthchange="0.5" />
      </StatusEffect>
    </Effect>
    <!-- Third stage: Slow death, lasts for ~10 min-->
    <Effect minstrength="300" maxstrength="600" minscreenblur="0.1" maxscreenblur="0.2" minvitalitydecrease="25" maxvitalitydecrease="200" strengthchange="+0.5">
      <StatusEffect target="Character" SpeedMultiplier="0.8" setvalue="true" />
    </Effect>
    <!-- Choke sounds for male -->
    <PeriodicEffect mininterval="180" maxinterval="300">
      <StatusEffect target="Character" SpeedMultiplier="0.0" setvalue="true" duration="1.7" />
      <StatusEffect target="Character" comparison="and">
        <Conditional ishuman="true" />
        <Conditional ismale="true" />
        <Sound file="Content/Sounds/HUMAN_chokeMale1.ogg" selectionmode="Random" />
        <Sound file="Content/Sounds/HUMAN_chokeMale2.ogg" />
        <Sound file="Content/Sounds/HUMAN_chokeMale3.ogg" />
      </StatusEffect>
      <!-- For female -->
      <StatusEffect target="Character" comparison="and">
        <Conditional ishuman="true" />
        <Conditional isfemale="true" />
        <Sound file="Content/Sounds/HUMAN_chokeFemale1.ogg" selectionmode="Random" />
        <Sound file="Content/Sounds/HUMAN_chokeFemale2.ogg" />
        <Sound file="Content/Sounds/HUMAN_chokeFemale3.ogg" />
      </StatusEffect>
      <!-- Causes character to gain some damage -->
      <StatusEffect target="Character">
        <Affliction identifier="stun" strength="0.1" />
        <Affliction identifier="organdamage" strength="0.5" />
        <Affliction identifier="bloodloss" strength="2" />
      </StatusEffect>
      <!-- Spill blood effect -->
      <StatusEffect target="Character" targetlimbs="Head" duration="1">
        <ParticleEmitter particle="blood" copyentityangle="true" anglemin="-10" anglemax="10" particlespersecond="50" velocitymin="50" velocitymax="200" scalemin="0.1" scalemax="0.2" />
        <Conditional HideFace="eq False" />
      </StatusEffect>
    </PeriodicEffect>
    <icon texture="%ModDir%/icons/charInnerDeadly.png" color="55,55,55,255" origin="0,0" />
  </Affliction>
  <!-- Space Rabies: Caused by bites and only if player already have 20 damage from bites. Is letal, but the more player has it, the stronger he becomes(damage resists, speed and regeneration). -->
  <Affliction name="" identifier="spacerabies" description="" type="rabies" minstrength="0" maxstrength="601" limbspecific="false" indicatorlimb="Torso" activationthreshold="1.0" showiconthreshold="80" showinhealthscannerthreshold="30" causeofdeathdescription="" iconcolors="60,140,195,255;60,107,195,255;60,0,195,255" healcostmultiplier="4.5">
    <!-- First stage: Minor regeneration -->
    <Effect minstrength="0" maxstrength="150" strengthchange="+1">
      <StatusEffect target="Character" />
      <ReduceAffliction type="damage" strength="0.0625" />
    </Effect>
    <!-- Second stage: Moderate regeneration -->
    <Effect minstrength="150" maxstrength="300" strengthchange="+1">
      <StatusEffect target="Character" />
      <ReduceAffliction type="damage" strength="0.125" />
    </Effect>
    <!-- Third stage: Strong regeneration -->
    <Effect minstrength="300" maxstrength="450" mingrainstrength="0.0" maxgrainstrength="0.25" minscreenblur="0.0" maxscreenblur="0.1" strengthchange="+1">
      <StatusEffect target="Character" />
      <ReduceAffliction type="damage" strength="0.25" />
    </Effect>
    <!-- Fourth stage: Very strong regeneration -->
    <Effect minstrength="450" maxstrength="600" mingrainstrength="0.25" maxgrainstrength="0.5" minscreenblur="0.1" maxscreenblur="0.2" strengthchange="+1">
      <StatusEffect target="Character" />
      <ReduceAffliction type="damage" strength="0.5" />
      <ReduceAffliction type="burn" strength="0.125" />
      <ReduceAffliction identifier="bloodloss" strength="0.25" />
    </Effect>
    <Effect minstrength="600" maxstrength="601" maxvitalitydecrease="1000" strengthchange="+1"></Effect>
    <icon texture="%ModDir%/icons/charCanines.png" color="60,107,195,255" origin="0,0" />
  </Affliction>
  <!-- Psychotic Shock: Just a lethal addition to psychosis. Caused by blackout a bit and phychosis. Slowly kills. -->
  <Affliction name="" identifier="psyshock" description="" type="psyshock" limbspecific="false" indicatorlimb="Head" activationthreshold="1" showiconthreshold="150" showinhealthscannerthreshold="0" causeofdeathdescription="" minstrength="0" maxstrength="300">
      <!-- Normal effect when psychoclown is not present -->
      <Effect minstrength="0" maxstrength="300" minscreenblur="0.0" maxscreenblur="0.7" minvitalitydecrease="0" maxvitalitydecrease="200" strengthchange="-1">
      </Effect>
      <icon texture="%ModDir%/icons/charSilk.png" color="150,26,26,255" origin="0,0" />
    </Affliction>
  <!-- Blood Poisoning: Caused by donor blood with a specific chance when failed to apply. Is just a lethal side effect. -->
  <Affliction name="" identifier="bloodpoisoning" description="" type="poison" limbspecific="false" indicatorlimb="Torso" activationthreshold="1" showinhealthscannerthreshold="0" showiconthreshold="60" minstrength="0" maxstrength="200">
    <!-- Slowly dying -->
    <Effect minstrength="0" maxstrength="200" minvitalitydecrease="0" maxvitalitydecrease="200" strengthchange="+0.5">
      <StatusEffect target="Character" />
    </Effect>
    <!-- 30 to secs a player get stun of different strengh/time(2.5 sec, 5 sec, 10 sec) -->
    <PeriodicEffect mininterval="30" maxinterval="60">
      <StatusEffect target="Character">
        <Affliction identifier="stun" strength="2.5" selectionmode="Random" />
        <Affliction identifier="stun" strength="5" />
        <Affliction identifier="stun" strength="10" />
      </StatusEffect>
    </PeriodicEffect>
    <icon texture="%ModDir%/icons/charDirtyBlood.png" color="139,60,42,255" origin="0,0" />
  </Affliction>
  <!-- Severe injury: Caused by different types of damage(look into ragdoll of human). Gives pain. The stronger injury is, the more pain player gains. -->
  <Affliction name="" identifier="severeinjury" description="" type="deepdamage" limbspecific="true" indicatorlimb="" activationthreshold="1" showiconthreshold="0" minstrength="0" maxstrength="10" iconcolors="255,153,51,055;255,128,0,155;204,86,0,255">
    <!-- Level one of injury: Gives just pain -->
    <Effect minstrength="0" maxstrength="5" minvitalitydecrease="0" maxvitalitydecrease="5">
      <StatusEffect target="Character">
        <Affliction identifier="pain" strength="1" />
      </StatusEffect>
    </Effect>
    <!-- Level two: Doubles pain -->
    <Effect minstrength="5" maxstrength="10" minvitalitydecrease="5" maxvitalitydecrease="10">
      <StatusEffect target="Character">
        <Affliction identifier="pain" strength="2" />
      </StatusEffect>
    </Effect>
    <!-- Periodically player chokes due the injury. 90 to 150 secs(1.5 to 2.5 mins) -->
    <!-- Male sounds -->
    <PeriodicEffect mininterval="90" maxinterval="150">
      <StatusEffect target="Character" comparison="and">
        <Conditional ishuman="true" />
        <Conditional ismale="true" />
        <Sound file="Content/Sounds/HUMAN_chokeMale1.ogg" selectionmode="Random" />
        <Sound file="Content/Sounds/HUMAN_chokeMale2.ogg" />
        <Sound file="Content/Sounds/HUMAN_chokeMale3.ogg" />
      </StatusEffect>
      <!-- Female sounds -->
      <StatusEffect target="Character" comparison="and">
        <Conditional ishuman="true" />
        <Conditional isfemale="true" />
        <Sound file="Content/Sounds/HUMAN_chokeFemale1.ogg" selectionmode="Random" />
        <Sound file="Content/Sounds/HUMAN_chokeFemale2.ogg" />
        <Sound file="Content/Sounds/HUMAN_chokeFemale3.ogg" />
      </StatusEffect>
    </PeriodicEffect>
    <icon texture="%ModDir%/icons/charBrokenBone.png" color="255,90,0,255" origin="0,0" />
  </Affliction>
  <!-- Severe Bleeding: Caused by different damage types(look into ragdoll of human) -->
  <Affliction name="" identifier="severebleeding" description="" type="severebleeding" limbspecific="true" indicatorlimb="" activationthreshold="1" showiconthreshold="0" minstrength="0" maxstrength="10" iconcolors="255,153,51,055;255,128,0,155;204,86,0,255">
    <!-- Level one of bleeding: Bloodloss and pain -->
    <Effect minstrength="0" maxstrength="5" minvitalitydecrease="0" maxvitalitydecrease="2.5">
      <StatusEffect target="Character">
        <Affliction identifier="bloodloss" strength="0.125" />
        <Affliction identifier="pain" strength="0.5" />
      </StatusEffect>
      <!-- Blood flow effect -->
      <StatusEffect target="Character" targetlimbs="This">
        <Conditional HideFace="eq False" />
        <ParticleEmitter particle="blood" copyentityangle="true" anglemin="-10" anglemax="10" particlespersecond="50" velocitymin="50" velocitymax="200" scalemin="0.1" scalemax="0.2" />
      </StatusEffect>
    </Effect>
    <!-- Level two: Doubles pain -->
    <Effect minstrength="5" maxstrength="10" minvitalitydecrease="2.5" maxvitalitydecrease="5">
      <StatusEffect target="Character">
        <Affliction identifier="bloodloss" strength="0.25" />
        <Affliction identifier="pain" strength="1" />
      </StatusEffect>
      <!-- Blood flow effect -->
      <StatusEffect target="Character" targetlimbs="This">
        <Conditional HideFace="eq False" />
        <ParticleEmitter particle="blood" copyentityangle="true" anglemin="-10" anglemax="10" particlespersecond="50" velocitymin="50" velocitymax="200" scalemin="0.1" scalemax="0.2" />
      </StatusEffect>
    </Effect>
    <icon texture="%ModDir%/icons/charBleeding.png" sourcerect="0,0,128,128" color="255,90,0,255" origin="0,0" />
  </Affliction>
  <!-- Pain: Caused by severe injuries and fever. Accumulates. Causes blackout and give debuffs over time. Should motivate player to seek help. ~6 min till blackout. Every severe injury accelerate pain gain. Goes away by itself over time -> Treat causes -->
  <Affliction name="" identifier="pain" description="" type="pain" limbspecific="false" indicatorlimb="Head" activationthreshold="0.5" showiconthreshold="0" minstrength="0" maxstrength="300" healcostmultiplier="1">
    <!-- First stage: None. At least 2 severe injuries needed to cause to growth (+2) -->
    <Effect minstrength="0" maxstrength="100" strengthchange="-1">
    <StatusEffect target="Character" SpeedMultiplier="0.9" setvalue="true"/>
    </Effect>
    <!-- Second stage: Every 15 to 30 secs organdamage with 15% chance -->
    <Effect minstrength="100" maxstrength="200" strengthchange="-1">
      <StatusEffect target="Character" SpeedMultiplier="0.8" setvalue="true"/>
      <PeriodicEffect mininterval="15" maxinterval="30">
        <Affliction identifier="organdamage" strength="2" probability="0.15"/>
      </PeriodicEffect>
    </Effect>
    <!-- Third stage: Every 15 to 30 secs organdamage with 30% chance and gains slow movement -->
    <Effect minstrength="200" maxstrength="290" strengthchange="-1">
      <StatusEffect target="Character" SpeedMultiplier="0.6" setvalue="true"/>
      <PeriodicEffect mininterval="15" maxinterval="30">
        <Affliction identifier="organdamage" strength="2" probability="0.3"/>
      </PeriodicEffect>
    </Effect>
    <!-- Fourth stage: Player blackouts(replaced by stun)-->
    <Effect minstrength="290" maxstrength="300" strengthchange="-1">
      <Affliction identifier="stun" setvalue"true" />
    </Effect>
    <icon texture="%ModDir%/icons/charBrokenHead.png" sourcerect="0,0,128,128" color="255,100,100,255" origin="0,0" />
  </Affliction>
